<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.android.ainege.shoppinglist">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity
			android:name=".ui.activities.ListsActivity"
			android:label="@string/you_lists"
			android:theme="@style/AppTheme.NoActionBar"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.activities.ShoppingListActivity"
			android:label=""
			android:theme="@style/AppTheme.NoActionBar.TransparentStatusBar"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
		</activity>
		<activity
			android:name=".ui.activities.ItemActivity"
			android:label=""
			android:theme="@style/AppTheme.NoActionBar.TransparentStatusBar"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
		</activity>
		<activity
			android:name=".ui.activities.SettingsActivity"
			android:label="@string/settings"
			android:theme="@style/AppTheme"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
		</activity>
		<activity
			android:name=".ui.activities.SettingsDictionaryActivity"
			android:label=""
			android:theme="@style/AppTheme"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="ru.android.ainege.shoppinglist.SettingsDataActivity"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
	</application>

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-feature android:name="android.hardware.camera" android:required="true"/>
</manifest>
