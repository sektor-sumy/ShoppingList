<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/row_list_item_height"
	android:background="@drawable/statelist_item_selection">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="horizontal"
		android:paddingLeft="@dimen/padding_16dp"
		android:paddingRight="@dimen/padding_16dp">

		<TextView
			android:id="@+id/color"
			android:layout_width="5dp"
			android:layout_height="match_parent"
			android:layout_marginRight="@dimen/padding_8dp"
			android:background="@android:color/transparent"
			android:visibility="gone"/>

		<ImageView
			android:id="@+id/item_image_list"
			android:layout_width="@dimen/avatar_hw"
			android:layout_height="@dimen/avatar_hw"
			android:layout_marginRight="@dimen/padding_8dp"
			android:scaleType="centerCrop"/>

		<TextView
			android:id="@+id/item_name_list"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/padding_8dp"
			android:layout_weight="@dimen/column_name_weight"
			android:ellipsize="end"
			android:maxLines="2"
			android:textColor="@android:color/black"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/item_amount_list"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/padding_8dp"
			android:layout_weight="@dimen/column_amount_weight"
			android:ellipsize="middle"
			android:gravity="center_horizontal"
			android:minWidth="@dimen/column_amount_wight"
			android:textColor="@android:color/black"
			android:textSize="16sp"
			android:maxLines="1"/>

		<TextView
			android:id="@+id/item_price_list"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="@dimen/column_price_weight"
			android:ellipsize="end"
			android:gravity="center_horizontal"
			android:minWidth="@dimen/column_price_wight"
			android:textColor="@android:color/black"
			android:textSize="16sp"
			android:maxLines="1"/>

	</LinearLayout>

	<View
		android:id="@+id/is_bought_list"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_gravity="center"
		android:layout_marginLeft="@dimen/padding_12dp"
		android:layout_marginRight="@dimen/padding_12dp"
		android:background="@android:color/black"
		android:visibility="gone"/>

</FrameLayout>