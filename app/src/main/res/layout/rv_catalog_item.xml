<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/row_list_item_height"
	android:gravity="center"
	android:orientation="horizontal"
	android:paddingLeft="@dimen/padding_16dp"
	android:paddingRight="@dimen/padding_16dp"
	android:background="@drawable/statelist_item_selection">

	<TextView
		android:id="@+id/color"
		android:layout_width="5dp"
		android:layout_height="match_parent"
		android:layout_marginRight="@dimen/padding_8dp"
		android:background="@android:color/transparent"
		android:visibility="gone"/>

	<ImageView
		android:id="@+id/image"
		android:layout_width="@dimen/avatar_hw"
		android:layout_height="@dimen/avatar_hw"
		android:layout_marginRight="@dimen/padding_12dp"
		android:scaleType="centerCrop"/>

	<TextView
		android:id="@+id/name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/padding_8dp"
		android:layout_weight="@dimen/catalog_name_weight"
		android:ellipsize="end"
		android:maxLines="2"
		android:textColor="@android:color/black"
		android:textSize="16sp"/>

	<TextView
		android:id="@+id/unit"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/padding_16dp"
		android:layout_weight="@dimen/catalog_unit_weight"
		android:ellipsize="middle"
		android:gravity="center_horizontal"
		android:minWidth="@dimen/column_amount_wight"
		android:textColor="@android:color/black"
		android:textSize="16sp"
		android:maxLines="1"/>

	<ImageButton
		android:id="@+id/delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:background="@android:color/transparent"
		android:layout_marginLeft="@dimen/padding_4dp"
		android:layout_marginRight="@dimen/padding_16dp"
		android:src="@drawable/ic_delete_black_24dp"/>

</LinearLayout>