<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_list_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_8dp">

        <ImageView
            android:id="@+id/item_image_list"
            android:layout_width="@dimen/avatar_hw"
            android:layout_height="@dimen/avatar_hw"/>

        <TextView
            android:id="@+id/item_name_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16dp"/>

        <TextView
            android:id="@+id/item_amount_list"
            android:layout_width="@dimen/column_wight"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/padding_16dp"/>

        <TextView
            android:id="@+id/item_price_list"
            android:layout_width="@dimen/column_wight"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/padding_16dp"/>

    </LinearLayout>

    <View
        android:id="@+id/is_bought_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
</FrameLayout>