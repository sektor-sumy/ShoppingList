<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_category_sort">
        <CheckBoxPreference
            android:key="@string/settings_key_sort_isBought"
            android:title="@string/settings_title_sort_isBought"
            android:summary="@string/settings_summary_sort_isBought"
            android:defaultValue="true" />
        <ListPreference
            android:key="@string/settings_key_sort_type"
            android:title="@string/settings_title_sort_type"
            android:summary="@string/settings_summary_sort_type"
            android:defaultValue="1"
            android:entries="@array/sort_order"
            android:entryValues="@array/sort_order"
            android:dialogTitle="@string/settings_dialog_title_sort_type" />
    </PreferenceCategory>
    <ListPreference
        android:key="@string/settings_key_sort_data_item"
        android:title="@string/settings_title_sort_data_item"
        android:summary="@string/settings_summary_sort_data_item"
        android:defaultValue="1"
        android:entries="@array/data_item"
        android:entryValues="@array/data_item"
        android:dialogTitle="@string/settings_dialog_title_sort_data_item" />
</PreferenceScreen>