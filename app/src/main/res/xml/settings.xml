<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="@string/settings_list">
		<SwitchPreference
			android:defaultValue="false"
			android:key="@string/settings_key_open_last_list"
			android:summary="@string/settings_summary_open_last_list"
			android:title="@string/settings_title_open_last_list"/>
		<ListPreference
			android:defaultValue="@string/sort_order_alphabet"
			android:dialogTitle="@string/settings_dialog_title_sort_type"
			android:entries="@array/sort_order"
			android:entryValues="@array/sort_order"
			android:key="@string/settings_key_sort_type"
			android:summary="@string/settings_summary_sort_type"
			android:title="@string/settings_title_sort_type"/>
		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/settings_key_sort_is_bought"
			android:summary="@string/settings_summary_sort_is_bought"
			android:title="@string/settings_title_sort_is_bought"/>
		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/settings_key_use_category"
			android:summary="@string/settings_summary_use_category"
			android:title="@string/settings_title_use_category"/>
		<SwitchPreference
			android:defaultValue="true"
			android:dependency="@string/settings_key_use_category"
			android:key="@string/settings_key_collapse_category"
			android:summary="@string/settings_summary_collapse_category"
			android:title="@string/settings_title_collapse_category"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/settings_category_data_item">
		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/settings_key_auto_complete_data"
			android:summary="@string/settings_summary_auto_complete_data"
			android:title="@string/settings_title_auto_complete_data"/>
		<PreferenceScreen
			android:dependency="@string/settings_key_auto_complete_data"
			android:key="@string/settings_key_auto_complete_screen"
			android:title="@string/settings_title_auto_complete_screen">

			<PreferenceCategory
				android:title="@string/settings_title_add_item">
				<CheckBoxPreference
					android:defaultValue="true"
					android:key="@string/settings_key_auto_complete_amount_add"
					android:title="@string/settings_title_auto_complete_amount"/>
				<CheckBoxPreference
					android:defaultValue="true"
					android:key="@string/settings_key_auto_complete_unit_add"
					android:title="@string/settings_title_auto_complete_unit"/>
				<CheckBoxPreference
					android:defaultValue="true"
					android:key="@string/settings_key_auto_complete_price_add"
					android:title="@string/settings_title_auto_complete_price"/>
				<CheckBoxPreference
					android:defaultValue="true"
					android:key="@string/settings_key_auto_complete_comment_add"
					android:title="@string/settings_title_auto_complete_comment"/>
			</PreferenceCategory>
			<PreferenceCategory
				android:title="@string/settings_title_edit_item">
				<CheckBoxPreference
					android:defaultValue="false"
					android:key="@string/settings_key_auto_complete_amount_edit"
					android:title="@string/settings_title_auto_complete_amount"/>
				<CheckBoxPreference
					android:defaultValue="false"
					android:key="@string/settings_key_auto_complete_unit_edit"
					android:title="@string/settings_title_auto_complete_unit"/>
				<CheckBoxPreference
					android:defaultValue="false"
					android:key="@string/settings_key_auto_complete_price_edit"
					android:title="@string/settings_title_auto_complete_price"/>
				<CheckBoxPreference
					android:defaultValue="false"
					android:key="@string/settings_key_auto_complete_comment_edit"
					android:title="@string/settings_title_auto_complete_comment"/>
			</PreferenceCategory>
		</PreferenceScreen>
		<PreferenceScreen
			android:key="@string/settings_key_text_selection_screen"
			android:title="@string/settings_title_text_selection_screen">

			<CheckBoxPreference
				android:defaultValue="false"
				android:key="@string/settings_key_text_selection_name"
				android:title="@string/settings_title_text_selection_name"/>
			<CheckBoxPreference
				android:defaultValue="true"
				android:key="@string/settings_key_text_selection_amount"
				android:title="@string/settings_title_text_selection_amount"/>
			<CheckBoxPreference
				android:defaultValue="true"
				android:key="@string/settings_key_text_selection_price"
				android:title="@string/settings_title_text_selection_price"/>
			<CheckBoxPreference
				android:defaultValue="true"
				android:key="@string/settings_key_text_selection_comment"
				android:title="@string/settings_title_text_selection_comment"/>
		</PreferenceScreen>
		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/settings_key_fast_edit"
			android:summary="@string/settings_summary_fast_edit"
			android:title="@string/settings_title_fast_edit"/>
	</PreferenceCategory>
</PreferenceScreen>