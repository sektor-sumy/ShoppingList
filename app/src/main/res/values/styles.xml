<resources>

	<style name="Animation" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- enable window content transitions -->
		<item name="android:windowContentTransitions">true</item>
	</style>

	<style name="AppTheme" parent="Animation">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="windowActionModeOverlay">true</item>
	</style>

	<style name="AppTheme.NoActionBar.TransparentStatusBar"/>

	<style name="ShowcaseText" parent="TextAppearance.ShowcaseView.Title">
		<item name="android:textColor">#06b8f9</item>
	</style>

	<style name="Showcase" parent="ShowcaseView">
		<item name="sv_backgroundColor">#c323414e</item>
		<item name="sv_titleTextAppearance">@style/ShowcaseText</item>
	</style>

</resources>
